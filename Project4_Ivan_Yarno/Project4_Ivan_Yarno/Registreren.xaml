<Window x:Class="Project4_Ivan_Yarno.Registreren"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project4_Ivan_Yarno"
        mc:Ignorable="d"
        Title="Registreren" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <DockPanel>
                <TextBlock Width="100" Text="Id :" Visibility="Hidden"/>
                <TextBox IsReadOnly="True" Visibility="Hidden" x:Name="tbId"/>
            </DockPanel>
            <DockPanel>
                <TextBlock Width="100" Text="Naam :"/>
                <TextBox x:Name="tbNaam"/>
            </DockPanel>
            <DockPanel>
                <TextBlock Width="100" Text="Email Adres:"/>
                <TextBox x:Name="tbEmail"/>
            </DockPanel>
            
            
            <DockPanel>
                <TextBlock Width="100" Text="Wachtwoord :"/>
                <TextBox x:Name="tbWachtwoord"/>
            </DockPanel>
            <Button Content="Maak aan" />
        </StackPanel>
    </Grid>
</Window>
